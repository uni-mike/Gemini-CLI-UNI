{
  "name": "restaurant_manager",
  "version": "1.0.0",
  "description": "Comprehensive full-stack restaurant management system",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/dist/index.js",
    "client": "cd frontend && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p backend/tsconfig.json",
    "build:client": "cd frontend && npm run build",
    "test": "npm run test:server && npm run test:client",
    "test:server": "jest backend/tests",
    "test:client": "cd frontend && npm test",
    "lint": "eslint backend/src frontend/src",
    "format": "prettier --write backend/src/**/*.{ts,js} frontend/src/**/*.{ts,tsx,js,jsx}"
  },
  "keywords": ["restaurant", "management", "fullstack", "typescript"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "pg": "^8.0.0"
  }
}